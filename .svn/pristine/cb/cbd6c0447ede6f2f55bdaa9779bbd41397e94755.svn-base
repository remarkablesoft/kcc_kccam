/*-------------------------------------------------------------------
    파일정의 : _sitemap.scss # 사이트맵
-------------------------------------------------------------------*/

.sitemap {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 2000;
    width: 100%;
    height: 100%;
    padding: 10rem 3rem;
    background: #000;

    .btn-close {
        position: absolute;
        top: 3rem;
        right: 3rem;

        .icon {
            font-size: 4rem;
        }
    }

    /* gnb */
    .gnb {
        width: 80%;
        margin: auto;
    }

    .gnb-menu {
        align-items: stretch;

        > li {
            flex: 1;
            height: calc(100vh - 20rem);
            padding: 0 3rem;
            border-left: 0.2rem solid #505050;

            .main-menu-link {
                padding: 0;
                border: 0 none;
                font-size: 2.2rem;
                color: #fff !important;
            }

            &:hover,
            &.active {
                .main-menu-link {
                    color: $primaryColor !important;
                }
            }
        }
    }

    .gnb-sub-menu {
        position: static;
        transform: none;
        overflow: visible;
        opacity: 1;
        height: 100% !important;
        margin-top: 4rem;
        padding: 0;
        transition: none;
        background: #000 !important;

        .scroll-element {
            > div {
                max-height: calc(100vh - 28rem);
            }
        }

        .list-item {
            text-align: left;

            .sub-menu-link {
                display: inline-block;
                padding: 1rem 0;
                font-size: 1.8rem;
                color: #f7f7f7 !important;
            }

            &:hover,
            &.active {
                .sub-menu-link {
                    @include defaultTxtHoverEffect();
                    color: #7e7aff !important;
                }
            }
        }
    }
}

/*=== tablet ===*/
@mixin sitemap-tablet() {
    .sitemap {
        .gnb {
            display: flex;
            height: 100%;
            overflow: auto;
        }
        .gnb-menu {
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: auto;

            > li {
                width: 100%;
                height: 100%;
                padding-bottom: 2rem;
                margin-bottom: 3rem;
                border: 0 none;
                text-align: center;
                border-bottom: 0.2rem solid #fff;

                &:last-child {
                    border-bottom: 0 none;
                }

                .main-menu-link {
                    // font-size: 3rem;
                }
            }
        }

        .gnb-sub-menu {
            margin-top: 1rem;

            .scroll-element {
                > div {
                    // max-height: 20rem;
                    padding-right: 0 !important;
                }
            }

            .list-item {
                text-align: center;

                &:hover,
                &.active {
                    .sub-menu-link {
                        color: $primaryColor !important;
                    }
                }
            }
        }
    }
}

/*=== mobile ===*/
@mixin sitemap-mobile() {
}
